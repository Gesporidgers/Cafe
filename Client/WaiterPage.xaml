<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.WaiterPage"
             xmlns:viewmodel="Client.Server">
    <VerticalStackLayout Padding="30" Spacing="10">

        <Label Grid.Column="0" FontSize="Subtitle" Text="Добро пожаловать!"></Label>
        <ListView x:Name="menuList" ItemsSource="{Binding Menu}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.View>
                            <Grid ColumnSpacing="10" RowSpacing="10">
                                <Grid.ColumnDefinitions >
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="50"></ColumnDefinition>
                                    <ColumnDefinition Width="20"></ColumnDefinition>
                                    <ColumnDefinition Width="50"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="60"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Label Grid.Column="0" Text="{Binding Source=Name}" Padding="10"></Label>
                                <Button Grid.Column="1" Text="+"  Margin="0,5,0,5"></Button>
                                <Label Grid.Column="2" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Padding="10,0,0,0">0</Label>
                                <Button Grid.Column="3" Text="-" Margin="0,5,0,5"></Button>
                            </Grid>
                        </ViewCell.View>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Grid.Column="1" Text="Создать заказ"></Button>

    </VerticalStackLayout>
</ContentPage>